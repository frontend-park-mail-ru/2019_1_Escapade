section(data-section-name='signup')
  .profile_edit
    .profile_edit__main
      a.profile_edit__exit(data-href='/', href='/')
      form.profile_edit__form
        .profile__row
          div
            span.profile__rowname nickname:
          input.profile__input.bg-white(name='login', type='login')
          .warning.signup__warning.hidden.js-warning-login
        .profile__row
          div
            span.profile__rowname email:
          input.profile__input.bg-white(name='email', type='email')
          .warning.signup__warning.hidden.js-warning-email
        .profile__row
          div
            span.profile__rowname password:
          input.profile__input.bg-white(type='password', name='password', autocomplete="new-password")
          .warning.signup__warning.hidden.js-warning-password
        .profile__row
          div
            span.profile__rowname repeat password:
          input.profile__input.bg-white(type='password', name='password-repeat', autocomplete="new-password")
          .warning.signup__warning.hidden.js-warning-repassword
      .signup_edit__confirm