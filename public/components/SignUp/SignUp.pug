header#header.menu-header
    h1 Logic game
    nav
      a.menu-button(href='sign_in', data-href='sign_in') Sign In
      a.menu-button(href='sign_up', data-href='sign_up') Sign Up
      a.menu-button(href='profile', data-href='profile') Profile
section.signup
  form.signup__form(novalidate='novalidate')
    input.input.signup__input.text-h2#email(type='email', name='email', autocomplete='autocomplete', autofocus='', placeholder='Email')
    .warning.signup__warning.hidden.js-warning-email
    input.input.signup__input.text-h2#login(type='login', name='login', autocomplete='autocomplete', autofocus='', placeholder='Login')
    .warning.signup__warning.hidden.js-warning-login
    input.input.signup__input.text-h2#password(type='password', name='password', autocomplete='autocomplete', placeholder='Password')
    .warning.signup__warning.hidden.js-warning-password
    input.input.signup__input.text-h2#password-repeat(type='password', name='password-repeat', autocomplete='autocomplete', placeholder='Repeat Password')
    .warning.signup__warning.hidden.js-warning-repassword
    input.button.signup__submit.text-h2(type='submit', name='submit', value='Sign up')
    .signup__footer
      a.button.header-bar__button.text-base(data-href='menu', href='menu') Back to Menu
      .text-base or
      a.button.header-bar__button.text-base(href='/signin') Sign In